<div class="flex items-center justify-center min-h-screen py-12">
  <div class="w-full max-w-md space-y-8">
    <div>
      <img src="<%= Routes.static_path(@conn, "/images/logo.svg") %>" alt="Memoet Logo" class="w-auto h-8 mx-auto"/>
      <h1 class="mt-6 text-xl text-center">
        Create your account
      </h2>
    </div>
    <%= form_for @changeset, Routes.signup_path(@conn, :create), [class: "mt-8 space-y-6"], fn f -> %>
      <%= if @changeset.action do %>
        <div class="alert alert-danger">
          <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
      <% end %>

      <div class="space-y-3">
        <div>
          <%= label f, :email %>
          <%= email_input f, :email, class: "form-control form-block" %>
          <%= error_tag f, :email %>
        </div>
        <div>
          <%= label f, :password %>
          <%= password_input f, :password, class: "form-control form-block" %>
          <%= error_tag f, :password %>
        </div>
        <div>
          <%= label f, :password_confirmation %>
          <%= password_input f, :password_confirmation, class: "form-control form-block" %>
          <%= error_tag f, :password_confirmation %>
        </div>
      </div>

      <%= submit "Register", class: "btn-primary w-full" %>

      <div class="flex items-center justify-center">
        <%= link "Sign in", to: Routes.pow_session_path(@conn, :new), class: " text-indigo-600 hover:text-indigo-500" %>
      </div>

      <div class="h-20" />
    <% end %>
  </div>
</div>
